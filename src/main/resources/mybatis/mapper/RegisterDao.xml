<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper 
	PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.study.springboot.dao.IRegisterDAO">
	<select id="listDao" resultType="com.study.springboot.dto.RegisterDTO">
		select * from Register order by rno desc
	</select>
	<select id="viewDao" resultType="com.study.springboot.dto.RegisterDTO">
		select * from Register where rno=#{param1}
	</select>
		<select id="checkPasswordDao" resultType="boolean">
		select 
		 case when count(*) > 0 then 1 
		 else 0 end as result
		from Register where rno=#{param1} and rpasswd=#{param2}
	</select>
	<insert id="writeDao">
		insert into Register 
		values (register_seq.nextval,#{rid},#{rpasswd},#{rname},#{rtel},#{rgender},#{rhobby},#{rprofile},SYSDATE)
	</insert>
	<update id="updateDao">
		update Register 
		set rpasswd=#{rpasswd},rname=#{rname},rtel=#{rtel},rhobby=#{rhobby},rprofile=#{rprofile} where rno=#{rno}
	</update>
	<delete id="deleteDao">
		delete from Register where rno=#{param1}
	</delete>
</mapper>